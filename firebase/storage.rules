rules_version = '2';

// Firebase Storage security rules for MH Construction website
service firebase.storage {
  match /b/{bucket}/o {
    // Public assets - project images, company photos, etc.
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                   exists(/databases/$(default)/documents/team/$(request.auth.uid));
    }
    
    // Project files - accessible to team and project owners
    match /projects/{projectId}/{allPaths=**} {
      allow read: if request.auth != null && 
                  (exists(/databases/$(default)/documents/team/$(request.auth.uid)) ||
                   resource.metadata.customMetadata.createdBy == request.auth.uid);
      allow write: if request.auth != null && 
                   exists(/databases/$(default)/documents/team/$(request.auth.uid));
    }
    
    // User uploads - consultation documents, etc.
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
                         (request.auth.uid == userId || 
                          exists(/databases/$(default)/documents/team/$(request.auth.uid)));
    }
    
    // Estimates and reports - team access only
    match /reports/{allPaths=**} {
      allow read, write: if request.auth != null && 
                         exists(/databases/$(default)/documents/team/$(request.auth.uid));
    }
  }
}