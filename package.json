{
  "name": "mh-website",
  "version": "4.0.0",
  "description": "Veteran-owned construction website for MH Construction - Honest Communication, Proven Craftsmanship",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:fast": "NODE_ENV=production SKIP_LINT=true next build",
    "build:profile": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:cloudflare": "npx @cloudflare/next-on-pages@1",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:pwa": "node scripts/test-pwa.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pages:deploy": "npm run build:cloudflare && npx wrangler pages deploy .vercel/output/static --project-name=mh-construction",
    "pages:dev": "npm run dev",
    "deploy:production": "npm run build:cloudflare && npm run pages:deploy",
    "bundle:size": "npm run build && du -sh .next/static/chunks/*.js | sort -hr | head -10",
    "clean": "bash scripts/cleanup/cleanup.sh",
    "maintenance": "npm run clean",
    "lint:markdown": "markdownlint-cli2 --config .markdownlint-cli2.jsonc --ignore-path .markdownlintignore \"**/*.md\"",
    "lint:markdown:fix": "markdownlint-cli2 --fix --config .markdownlint-cli2.jsonc --ignore-path .markdownlintignore \"**/*.md\"",
    "cspell:check": "npx cspell \"**/*.{md,js,ts,tsx,json}\" --no-progress --show-context",
    "qr:generate": "node scripts/generate-qr-codes.js",
    "qr:test": "node scripts/test-qr-codes.js",
    "qr:check": "bash scripts/check-qr-codes.sh",
    "optimize:images": "node scripts/optimization/optimize-images.js",
    "optimize:videos": "node scripts/optimization/optimize-videos.js",
    "audit:images": "node scripts/optimization/audit-images.js",
    "prepare": "husky"
  },
  "keywords": [
    "construction",
    "nextjs",
    "cloudflare",
    "veteran-owned",
    "typescript"
  ],
  "author": "MH Construction Development Team",
  "license": "MIT",
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@react-email/render": "^1.4.0",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/unist": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.3",
    "framer-motion": "^12.23.19",
    "jose": "^5.9.6",
    "next": "15.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^19.2.3",
    "recharts": "^3.4.1",
    "resend": "^6.4.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^16.1.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/qrcode": "^1.5.6",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.7",
    "chrome-launcher": "^1.2.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jimp": "^1.6.0",
    "jsqr": "^1.4.0",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.18.1",
    "pngjs": "^7.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.5",
    "wrangler": "^4.45.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
