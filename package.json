{
  "name": "mh-website",
  "version": "4.0.0",
  "description": "Revolutionary construction website for MH Construction - Building Tomorrow with Today's Technology",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:fast": "NODE_ENV=production SKIP_LINT=true next build",
    "build:profile": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:cloudflare": "npx @cloudflare/next-on-pages@1",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "codemod:fix-common": "node scripts/codemods/fix-common-issues.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pages:deploy": "npm run build:cloudflare && npx wrangler pages deploy .vercel/output/static --project-name=mh-construction",
    "pages:dev": "npm run dev",
    "deploy:production": "npm run build:cloudflare && npm run pages:deploy",
    "bundle:size": "npm run build && du -sh .next/static/chunks/*.js | sort -hr | head -10",
    "performance:check": "npm run build && echo 'Build complete. Check bundle sizes above.'",
    "clean": "bash scripts/cleanup/cleanup.sh",
    "optimize:images": "bash scripts/optimization/optimize-images.sh",
    "maintenance": "npm run clean && npm run optimize:images",
    "lint:markdown": "markdownlint-cli2 --config .markdownlint-cli2.jsonc --ignore-path .markdownlintignore \"**/*.md\"",
    "lint:markdown:fix": "markdownlint-cli2 --fix --config .markdownlint-cli2.jsonc --ignore-path .markdownlintignore \"**/*.md\"",
    "lint:markdown:comprehensive": "bash scripts/markdown/comprehensive-markdown-fix.sh",
    "lint:markdown:quick": "bash scripts/markdown/quick-markdown-fix.sh",
    "lint:markdown:check": "echo 'Checking markdown files for lint issues...' && find . -name '*.md' -not -path './node_modules/*' -not -path './.git/*' | wc -l && echo 'files found'",
    "lint:devdocs": "markdownlint-cli2 'docs/development/**/*.md' --config devdocs.markdownlint-cli2.jsonc --no-globs",
    "validate:links": "bash scripts/markdown/validate-markdown-links.sh",
    "analyze:content": "bash scripts/analysis/analyze-content-quality.sh",
    "format:markdown": "bash scripts/markdown/advanced-markdown-formatting.sh",
    "cspell:check": "npx cspell \"**/*.{md,js,ts,tsx,json}\" --no-progress --show-context",
    "cspell:fix": "npx cspell \"**/*.{md,js,ts,tsx,json}\" --no-progress --words-only --unique | head -20 && echo 'Add these words to cspell.json if they are valid'",
    "domain:check": "bash scripts/utilities/check-domain-setup.sh",
    "domain:help": "echo 'Domain Setup Guide: docs/deployment/cloudflare-pages-setup.md' && echo 'Domain Check: npm run domain:check'",
    "seo:audit": "node scripts/seo-audit.js",
    "seo:check": "npm run seo:audit && echo 'SEO audit complete!'",
    "seo:report": "npm run seo:audit > seo-report.txt && cat seo-report.txt",
    "prepare": "husky"
  },
  "keywords": [
    "construction",
    "nextjs",
    "cloudflare",
    "veteran-owned",
    "ai-estimator",
    "typescript"
  ],
  "author": "MH Construction Development Team",
  "license": "MIT",
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@react-email/render": "^1.4.0",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/unist": "^3.0.3",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.3",
    "framer-motion": "^12.23.19",
    "next": "^15.5.2",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "resend": "^6.4.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.15.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.1.0",
    "wrangler": "^4.45.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
