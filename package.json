{
  "name": "mh-construction-website",
  "version": "2.2.0",
  "description": "Revolutionary construction website for MH Construction - Building Tomorrow with Today's Technology",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "export": "next build && next export",
    "lint": "next lint --config config/quality/eslint.config.mjs",
    "lint:fix": "next lint --fix --config config/quality/eslint.config.mjs",
    "type-check": "tsc --noEmit --project config/quality/tsconfig.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test --config config/testing/playwright.config.ts",
    "test:e2e:ui": "playwright test --ui --config config/testing/playwright.config.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --coverage --watchAll=false && playwright test --config config/testing/playwright.config.ts",
    "test:smoke": "playwright test --grep=@smoke --config config/testing/playwright.config.ts",
    "firebase:deploy": "firebase deploy --config config/deployment/firebase.json",
    "firebase:emulate": "firebase emulators:start --config config/deployment/firebase.json",
    "bundle:size": "npm run build && du -sh .next/static/chunks/*.js | sort -hr | head -10",
    "performance:check": "npm run build && echo 'Build complete. Check bundle sizes above.'",
    "clean": "bash scripts/cleanup.sh",
    "optimize:images": "bash scripts/optimize-images.sh",
    "maintenance": "npm run clean && npm run optimize:images",
    "lint:markdown": "markdownlint-cli2 --config .markdownlint-cli2.jsonc \"**/*.md\"",
    "lint:markdown:fix": "markdownlint-cli2 --fix --config .markdownlint-cli2.jsonc \"**/*.md\"",
    "lint:markdown:legacy": "bash scripts/fix-all-markdown.sh",
    "lint:markdown:enhanced": "bash scripts/enhanced-markdown-fix.sh",
    "lint:markdown:check": "echo 'Checking markdown files for lint issues...' && find . -name '*.md' -not -path './node_modules/*' -not -path './.git/*' | wc -l && echo 'files found'",
    "validate:links": "bash scripts/validate-markdown-links.sh",
    "analyze:content": "bash scripts/analyze-content-quality.sh",
    "format:advanced": "bash scripts/advanced-markdown-formatting.sh",
    "review:backups": "bash scripts/review-backups.sh"
  },
  "keywords": [
    "construction",
    "nextjs",
    "firebase",
    "veteran-owned",
    "ai-estimator",
    "typescript"
  ],
  "author": "MH Construction Development Team",
  "license": "MIT",
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@next/bundle-analyzer": "^15.5.3",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/web-push": "^3.6.4",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.3",
    "firebase": "^12.3.0",
    "framer-motion": "^12.23.19",
    "lucide-react": "^0.545.0",
    "next": "^15.5.2",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "recharts": "^3.2.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.2",
    "web-push": "^3.6.7",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.1",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "audit-ci": "^7.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lighthouse": "^12.8.2",
    "markdownlint-cli2": "^0.18.1",
    "msw": "^2.0.8",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setup.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@/components/(.*)$": "<rootDir>/src/components/$1",
      "^@/lib/(.*)$": "<rootDir>/src/lib/$1",
      "^@/hooks/(.*)$": "<rootDir>/src/hooks/$1",
      "^@/types/(.*)$": "<rootDir>/src/types/$1",
      "^@/test/(.*)$": "<rootDir>/src/test/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "@swc/jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{ts,tsx}",
      "<rootDir>/src/**/*.{test,spec}.{ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/test/**/*",
      "!src/stories/**/*",
      "!**/*.stories.*",
      "!src/app/**/layout.tsx",
      "!src/app/**/page.tsx",
      "!src/app/globals.css"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/",
      "<rootDir>/e2e/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(.*\\.mjs$))"
    ]
  }
}
