{
  "name": "mh-website",
  "version": "4.0.0",
  "description": "Revolutionary construction website for MH Construction - Building Tomorrow with Today's Technology",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:cloudflare": "npm run build && npm run export:cloudflare",
    "build:firebase": "npm run build && npm run export:firebase",
    "start": "next start",
    "export": "next build && next export",
    "export:cloudflare": "next export && npm run optimize:cloudflare",
    "export:firebase": "next export && npm run optimize:firebase",
    "optimize:cloudflare": "node scripts/optimization/optimize-for-cloudflare.js",
    "optimize:firebase": "node scripts/optimization/optimize-for-firebase.js",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit --project config/quality/tsconfig.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "firebase:deploy": "firebase deploy --config config/deployment/firebase.json",
    "firebase:emulate": "firebase emulators:start --config config/deployment/firebase.json",
    "cloudflare:deploy": "wrangler publish --config config/cloudflare/wrangler.toml",
    "cloudflare:dev": "wrangler dev --config config/cloudflare/wrangler.toml",
    "deploy:staging": "npm run build:firebase && firebase deploy --only hosting:staging",
    "deploy:production": "npm run build:cloudflare && npm run cloudflare:deploy",
    "bundle:size": "npm run build && du -sh .next/static/chunks/*.js | sort -hr | head -10",
    "performance:check": "npm run build && echo 'Build complete. Check bundle sizes above.'",
    "clean": "bash scripts/cleanup.sh",
    "optimize:images": "bash scripts/optimization/optimize-images.sh",
    "maintenance": "npm run clean && npm run optimize:images",
    "lint:markdown": "markdownlint-cli2 --config .markdownlint-cli2.jsonc \"**/*.md\"",
    "lint:markdown:fix": "markdownlint-cli2 --fix --config .markdownlint-cli2.jsonc \"**/*.md\"",
    "lint:markdown:legacy": "bash scripts/fix-all-markdown.sh",
    "lint:markdown:enhanced": "bash scripts/enhanced-markdown-fix.sh",
    "lint:markdown:check": "echo 'Checking markdown files for lint issues...' && find . -name '*.md' -not -path './node_modules/*' -not -path './.git/*' | wc -l && echo 'files found'",
    "validate:links": "bash scripts/markdown/validate-markdown-links.sh",
    "analyze:content": "bash scripts/analysis/analyze-content-quality.sh",
    "format:advanced": "bash scripts/advanced-markdown-formatting.sh",
    "review:backups": "bash scripts/review-backups.sh",
    "cspell:sync-db": "node scripts/add-cspell-words-to-db.js",
    "cspell:sync-db:ts": "tsx src/lib/utils/cspell-database.ts",
    "cspell:check": "npx cspell \"**/*.{md,js,ts,tsx,json}\" --no-progress --show-context",
    "cspell:fix": "npx cspell \"**/*.{md,js,ts,tsx,json}\" --no-progress --words-only --unique | head -20 && echo 'Add these words to cspell.json if they are valid'"
  },
  "keywords": [
    "construction",
    "nextjs",
    "firebase",
    "veteran-owned",
    "ai-estimator",
    "typescript"
  ],
  "author": "MH Construction Development Team",
  "license": "MIT",
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/bcryptjs": "^3.0.0",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/unist": "^3.0.3",
    "@types/web-push": "^3.6.4",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.3",
    "firebase": "^12.4.0",
    "firebase-admin": "^13.5.0",
    "framer-motion": "^12.23.19",
    "lucide-react": "^0.544.0",
    "next": "^15.5.2",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "recharts": "^3.2.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "web-push": "^3.6.7",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.12.0",
    "lighthouse": "^12.8.2",
    "markdownlint": "^0.39.0",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.1.0"
  }
}
