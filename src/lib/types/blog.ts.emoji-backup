// Blog and content management types
export interface BlogPost {
  id: string
  title: string
  slug: string
  excerpt: string
  content: string
  author: {
    name: string
    role: string
    avatar?: string
    bio?: string
  }
  publishedAt: string
  updatedAt?: string
  category: BlogCategory
  tags: string[]
  featuredImage: {
    url: string
    alt: string
    caption?: string
  }
  seo: {
    metaTitle?: string
    metaDescription?: string
    keywords?: string[]
    ogImage?: string
  }
  status: 'draft' | 'published' | 'archived'
  readTime: number // in minutes
  featured: boolean
  relatedPosts?: string[] // Post IDs
}

export interface BlogCategory {
  id: string
  name: string
  slug: string
  description: string
  color: string
  icon: string
  postCount: number
}

export interface NewsUpdate {
  id: string
  title: string
  content: string
  date: string
  type: 'company' | 'project' | 'industry' | 'team'
  priority: 'low' | 'medium' | 'high'
  author: string
  images?: string[]
  featured: boolean
}

export interface ProjectShowcase {
  id: string
  title: string
  description: string
  category: 'residential' | 'commercial' | 'renovation' | 'emergency'
  location: string
  completionDate: string
  budget: {
    range: string
    actual?: number
  }
  duration: {
    estimated: string
    actual?: string
  }
  images: {
    before?: string[]
    during?: string[]
    after: string[]
    featured: string
  }
  testimonial?: {
    quote: string
    client: string
    rating: number
  }
  features: string[]
  challenges?: string[]
  solutions?: string[]
  materials: string[]
  team: string[]
  tags: string[]
  seo: {
    metaTitle?: string
    metaDescription?: string
  }
}

